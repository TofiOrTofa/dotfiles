set $browser firefox
set $terminal alacritty
set $search_apps wofi

#функциональный ряд f
set $sun_up brightnessctl set 5%+
set $sun_down brightnessctl set 5%-
set $sun_max brightnessctl set 100%
set $sun_min brightnessctl set 0%
set $sun_mute ~/.config/sway/scripts/switch_screen.sh

set $button_sun_up XF86MonBrightnessUp
set $button_sun_down XF86MonBrightnessDown
set $button_sun_max Shift+$button_sun_up
set $button_sun_min Shift+$button_sun_down


set $vol_up pactl set-sink-volume \@DEFAULT_SINK@ +5%
set $vol_down pactl set-sink-volume \@DEFAULT_SINK@ -5%
set $vol_max pactl set-sink-volume \@DEFAULT_SINK@ +100%
set $vol_min pactl set-sink-volume \@DEFAULT_SINK@ 0%
set $vol_mute pactl set-sink-mute \@DEFAULT_SINK@ toggle
set $vol_app pavucontrol

set $button_vol_up XF86AudioRaiseVolume
set $button_vol_down XF86AudioLowerVolume
set $button_vol_max Shift+$button_vol_up
set $button_vol_min Shift+$button_vol_down
set $button_vol_mute XF86AudioMute


set $mic_up pactl set-source-volume \@DEFAULT_SOURCE@ +5%
set $mic_down pactl set-source-volume \@DEFAULT_SOURCE@ -5%
set $mic_max pactl set-source-volume \@DEFAULT_SOURCE@ +100%
set $mic_min pactl set-source-volume \@DEFAULT_SOURCE@ 0%
set $mic_mute pactl set-source-mute \@DEFAULT_SOURCE@ toggle

set $button_mic_up $ctrl+$button_vol_up
set $button_mic_down $ctrl+$button_vol_down
set $button_mic_max $ctrl+Shift+$button_vol_up
set $button_mic_min $ctrl+Shift+$button_vol_down
set $button_mic_mute XF86AudioMicMute

set $button_screenshot Print
set $screenshot_app flameshot gui

set $ws1 workspace number "1"
set $ws2 workspace number "2"
set $ws3 workspace number "3"
set $ws4 workspace number "4"
set $ws5 workspace number "5"
set $ws6 workspace number "6"
set $ws7 workspace number "7"
set $ws8 workspace number "8"
set $ws9 workspace number "9"
set $ws10 workspace number "10"

